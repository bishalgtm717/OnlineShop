@model int
<td style="width: 150px">
    <div class="btn-group">
        <div class="col ml-1"> 
          <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@Model">
            <i class="fas fa-edit mx-3"></i>
        </a>
        </div>
        <div class="col ml-1">
        <a asp-action="Details"  class="btn btn-success" asp-route-id="@Model"><i class="fas fa-eye mx-3"></i></a>
        </div>
        <div class="col ml-1">
        <a asp-action="Delete"  class="btn btn-danger" asp-route-id="@Model">
            <i class="fas fa-trash-alt mx-3"></i>
        </a>
        </div>
    </div>
</td>